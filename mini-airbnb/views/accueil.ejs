<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Mini Airbnb</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <!-- Galerie modale -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <span id="modal-close" class="modal-close">&times;</span>
      <div id="modal-images" class="modal-images"></div>
    </div>
  </div>

  <!-- Header -->
  <header class="main-header">
    <div class="header-gauche">
      <img src="/images/home.png" alt="Accueil" class="icon-home">
      <!-- Mini-AirBnB yazƒ±sƒ± buradaydƒ±, kaldƒ±rƒ±ldƒ± -->
    </div>

    <div class="header-centre">
      <input type="text" id="recherche" placeholder="Rechercher un logement..." />
    </div>

    <div class="header-droite">
      <button id="btnFavoris">‚ù§Ô∏è Favoris</button>
      <button>üë§ Profil</button>
    </div>
  </header>

  <!-- Titre -->
  <h1>Liste des logements</h1>

  <!-- Logements -->
  <div class="logements">
    <% logements.forEach(logement => { %>
      <div class="logement" data-titre="<%= logement.titre.toLowerCase() %>">
        <a href="/logement/<%= logement.id %>">
          <img src="<%= logement.image %>" alt="<%= logement.titre %>">
        </a>
        <h2>
          <a href="/logement/<%= logement.id %>"><%= logement.titre %></a>
          <span class="coeur" data-id="<%= logement.id %>">‚ô°</span>
        </h2>
        <p><%= logement.prix %> ‚Ç¨/nuit</p>
      </div>
    <% }); %>
  </div>

  <script src="/script.js"></script>
</body>
</html>
